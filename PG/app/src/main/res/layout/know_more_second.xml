<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/intro3"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:maxWidth="335dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic1"/>

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_1"
        app:srcCompat="@drawable/pic2"/>

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="107dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_2"
        app:srcCompat="@drawable/pic7"/>

    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="211dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_2"
        app:srcCompat="@drawable/pic3"/>

    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="214dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toEndOf="@+id/iv_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_4"
        app:srcCompat="@drawable/pic4"/>

    <ImageView
        android:id="@+id/iv_6"
        android:layout_width="214dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toEndOf="@+id/iv_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_5"
        app:srcCompat="@drawable/pic5"/>

    <ImageView
        android:id="@+id/iv_7"
        android:layout_width="212dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toEndOf="@+id/iv_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_6"
        app:srcCompat="@drawable/pic6"/>
</android.support.constraint.ConstraintLayout>